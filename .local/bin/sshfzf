#!/bin/bash
SSHCONFIGPATH=$HOME/.ssh/config.d/

SELECTED=$(find $SSHCONFIGPATH -type f -exec sed -rn 's/^\s*Host\s+(.*)\s*/\1/ip' {} \; | cut -f1 -d' ' | fzf --reverse --prompt="Host: ")

if [ -n "${SELECTED}" ]; then
	if [ "$TMUXSPLIT" == "1" ]; then
		tmux split-window
		tmux send "ssh $SELECTED $@" ENTER
	else
		ssh $SELECTED "$@"
	fi
fi
